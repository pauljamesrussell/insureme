<div class="imagebg">
  <%= render partial: 'layouts/navigation' %>

  <div class="container">
    <img data-bind="attr: {src: image_large}" class="profile-image">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <form class="form-inline">
          <p class="lead low-profile">
            I am
            <input type="text" class="form-control auto-grow" placeholder="first name" data-bind="value: first_name, valueUpdate: 'afterkeydown', attr: {size: first_name().length / 2}">
            <input type="text" class="form-control auto-grow" placeholder="surname" data-bind="value: surname, valueUpdate: 'afterkeydown', attr: {size: surname().length}">,
            I am
            <input type="text" class="form-control auto-grow" placeholder="age" data-bind="value: age, valueUpdate: 'afterkeydown', attr: {size: age().length}">
            years old and 
            <input type="text" class="form-control auto-grow" placeholder="gender" data-bind="value: gender, valueUpdate: 'afterkeydown', attr: {size: gender().length}">.
            I live at
            <input type="text" class="form-control auto-grow" placeholder="address" data-bind="value: address, valueUpdate: 'afterkeydown', attr: {size: address().length}">.
            I am
            <input type="text" class="form-control auto-grow" placeholder="marital status" data-bind="value: maritalStatus, valueUpdate: 'afterkeydown', attr: {size: maritalStatus().length}">.
            My email address is [email] or you can call me at [phone].
            I am a [job].
          </p>
        </form>
      </div>
    </div>
    <script type="text/javascript">
      ko.applyBindings(new InsureMe.Profile());
    </script>
  </div>
</div>